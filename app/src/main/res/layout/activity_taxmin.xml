<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaxminActivity">

    <TextView
        android:id="@+id/txtsecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qalan_haqqınız_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="84dp"
        android:textSize="28sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtthird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtsecond"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:textColor="#8A2F13"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/edttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtthird"
        android:hint="@string/d_di_daxil_edin"
        android:layout_marginTop="64dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btntaxminet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/t_xmin_et"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="84dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#06710B"/>

</androidx.constraintlayout.widget.ConstraintLayout>